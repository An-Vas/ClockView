<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ClockView">
        <attr name="hour" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="sec" format="integer"/>

        <attr name="hour_hand_width" format="integer"/>
        <attr name="min_hand_width" format="integer"/>
        <attr name="sec_hand_width" format="integer"/>

        <attr name="background_color" format="color"/>
        <attr name="shadow_color" format="color"/>
        <attr name="numbers_color" format="color"/>
        <attr name="clock_hands_color" format="color"/>
    </declare-styleable>

</resources>